{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false
  }
}
